<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_employee_card" name="Employee Card">
        <section class="s_employee_card mt30 mb30" data-scroll-background-ratio="1">
            <div class="container o_not_editable" id="table_snippet">
                <div>Here Dynamic Department will be shown</div>
            </div>
        </section>
    </template>

    <template id="s_employee_snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']//div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="website_snippet.s_employee_card"/>
        </xpath>
    </template>

</odoo>
