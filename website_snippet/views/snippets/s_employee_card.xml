<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_employee_card" name="Employee Card">
        <section class="s_employee_card mt30 mb30" data-scroll-background-ratio="1">
            <div class="container o_not_editable" id="table_snippet">
                <table class="table" id="demo_table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                            <th scope="col">Handle</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>@mdo</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                            <td>Thornton</td>
                            <td>@fat</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td colspan="2">Larry the Bird</td>
                            <td>@twitter</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </template>

    <template id="s_employee_snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']//div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="website_snippet.s_employee_card"/>
        </xpath>
    </template>

</odoo>
