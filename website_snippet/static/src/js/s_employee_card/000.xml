<?xml version='1.0' encoding='utf-8'?>
<templates>
    <t t-name="employee_card_data_iterate_template">
        <table class="table border">
            <thead>
                <tr>
                    <th scope="col">Dep .id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">Position</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="employee" t-as="rec" t-key="rec.id">
                    <tr>
                        <th scope="row">
                            <t t-out="rec.id"/>
                        </th>
                        <td>
                            <t t-out="rec.name"/>
                        </td>
                        <td>
                            <t t-out="rec.department_id[1]"/>
                        </td>
                        <td>
                            <t t-out="rec.job_id[1]"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</templates>
